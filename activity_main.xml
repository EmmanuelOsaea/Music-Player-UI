<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/albumArt"
        android:src="@drawable/ic_music"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="Dreams - Chill Vibes"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/playButton"
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1DB954" />
</LinearLayout>

<LinearLayout
    android:id="@+id/miniPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:elevation="6dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/albumArtMini"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_music_note"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_bg"
        android:clipToOutline="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songTitleMini"
            android:text="No song playing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/artistMini"
            android:text="Unknown Artist"
            android:textSize="14sp"
            android:textColor="#888888"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnPlayPauseMini"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_play_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play or pause" />

</LinearLayout>





        
        
        



        


<SeekBar
    android:id="@+id/seekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:progressTint="#FF9800"
    android:thumbTint="#FF9800" />

<LinearLayout
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <Button
        android:id="@+id/shuffleButton"
        android:text="Shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/repeatButton"
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
